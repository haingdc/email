{
  "name": "email",
  "version": "0.1.0",
  "private": true,
  "author": "Hai",
  "description": "Create an email client using React, Typescript, Electron",
  "main": "public/main.js",
  "homepage": "./",
  "build": {
    "appId": "com.mook",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "scripts": {
    "start": "react-scripts-ts start",
    "nonbrowser-start": "cross-env BROWSER=none react-scripts-ts start",
    "build": "react-scripts-ts build",
    "test": "react-scripts-ts test --env=jsdom --no-watchman",
    "eject": "react-scripts-ts eject",
    "electron-start": "electron .",
    "electron-dev": "concurrently \"yarn nonbrowser-start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "cross-env build --em.main=build/main.js",
    "preelectron-pack": "yarn build"
  },
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-scripts-ts": "2.13.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.8",
    "@types/enzyme-adapter-react-16": "^1.0.1",
    "@types/jest": "^22.1.1",
    "@types/node": "^9.4.0",
    "@types/react": "^16.0.36",
    "@types/react-dom": "^16.0.3",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.3",
    "electron": "^1.7.12",
    "electron-builder": "^19.55.3",
    "electron-is-dev": "^0.3.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "react-addons-test-utils": "^15.6.2",
    "typescript": "^2.7.1",
    "wait-on": "^2.1.0"
  }
}
